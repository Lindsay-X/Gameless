<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="eventBox" maxHeight="200.0" maxWidth="800.0" minHeight="200.0" minWidth="800.0" prefHeight="200.0" prefWidth="800.0" stylesheets="@../InfoInput.css" VBox.vgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.gameless.EventBoxController">
    <children>
        <HBox alignment="BOTTOM_LEFT" prefHeight="70.0" prefWidth="800.0" spacing="75.0">
            <children>
                <Label fx:id="eventNameLabel" maxWidth="650" minWidth="650" prefWidth="650" text="&lt;Event&gt;">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Label>
            </children>
            <padding>
                <Insets bottom="5.0" left="32.0" />
            </padding>
        </HBox>
        <Label fx:id="eventDescriptionLabel" alignment="TOP_LEFT" prefHeight="150.0" prefWidth="800.0" text="STO CRUST PIZZA. Call now and garlic. The hot crust from Domino's Pizza Now! Another NEW crust Pizza Now! Another NEW crust is topped off with herbs and you'll love from the newest delicious crust is topped off with herbs and you'll get a large 1-topping Pesto Crust sensation, handmade just from a zesty blend of sweet basil, parsley and you'll get a large 1-topping Pesto Crust Pizza for you." wrapText="true">
            <font>
                <Font name="MuktaMahee Regular" size="16.0" />
            </font>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets left="35.0" right="35.0" />
            </padding>
        </Label>
        <HBox prefHeight="70.0" prefWidth="800.0">
            <padding>
                <Insets left="32.0" right="32.0" />
            </padding>
            <children>
                <Label prefHeight="40.0" prefWidth="55.0" text="Points:">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="2.0" />
                    </HBox.margin>
                </Label>
                <Label fx:id="eventPointsLabel" prefHeight="40.0" prefWidth="80.0" text="&lt;number&gt;">
                    <font>
                        <Font name="MuktaMahee Regular" size="16.0" />
                    </font>
                </Label>
                <Label prefHeight="40.0" prefWidth="45.0" text="Time:">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="35.0" right="2.0" />
                    </HBox.margin>
                </Label>
                <Label fx:id="eventTimeLabel" prefHeight="40.0" prefWidth="125.0" text="December 18, 2023">
                    <font>
                        <Font name="MuktaMahee Regular" size="16.0" />
                    </font>
                </Label>
                <Label prefHeight="40.0" prefWidth="70.0" text="Location:">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="35.0" right="2.0" />
                    </HBox.margin>
                </Label>
                <Label fx:id="eventLocationLabel" prefHeight="40.0" prefWidth="100.0" text="&lt;Room no.&gt;">
                    <font>
                        <Font name="MuktaMahee Regular" size="16.0" />
                    </font>
                </Label>
                <Button fx:id="joinEventButton" alignment="CENTER" mnemonicParsing="false" onAction="#joinEventButtonOnAction" prefWidth="100.0" stylesheets="@../AddPublishButton.css" text="Join">
                    <font>
                        <Font name="MuktaMahee Regular" size="16.0" />
                    </font>
                    <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                    </padding>
                    <HBox.margin>
                        <Insets bottom="5.0" left="90.0" />
                    </HBox.margin>
                </Button>
            </children></HBox>
    </children>
    <VBox.margin>
        <Insets bottom="10.0" />
    </VBox.margin>
</VBox>
