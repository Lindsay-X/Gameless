<VBox maxHeight="200.0" minHeight="200.0" minWidth="800.0" prefHeight="200.0" prefWidth="800.0"
      stylesheets="@../EventBox.css" VBox.vgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gameless.AnnouncementPageBoxController">
    <children>
        <HBox alignment="BOTTOM_LEFT" prefHeight="50.0" prefWidth="800.0" spacing="300.0">
            <children>
                <Label fx:id="teacherLabel" prefHeight="23.0" prefWidth="400.0" text="&lt;Teacher&gt;">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Label>
                <Button fx:id="deleteButton" alignment="CENTER" contentDisplay="CENTER" minHeight="22.0" minWidth="22.0" mnemonicParsing="false" prefHeight="22.0" prefWidth="22.0" style="-fx-background-color: transparent;" textAlignment="CENTER" textOverrun="CLIP" onAction="#deleteButtonOnAction">
                    <graphic>
                        <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/deleteButtonImage.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="32.0" top="10.0" />
            </padding>
        </HBox>
        <Label fx:id="msgLabel" alignment="TOP_LEFT" prefHeight="100.0" prefWidth="800.0" text="Hello my fellow students. This belief comes from my unyielding faith in the decency and generosity of the American people. But it also comes from my own story." wrapText="true">
            <font>
                <Font name="MuktaMahee Regular" size="16.0" />
            </font>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets left="35.0" right="35.0" />
            </padding>
        </Label>
        <Button fx:id="editAnnouncementButton" alignment="CENTER" mnemonicParsing="false" onAction="#editAnnouncementButtonOnAction" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #ABFFC9; -fx-background-radius: 7.5;" text="Edit">
            <font>
                <Font name="MuktaMahee Regular" size="16.0" />
            </font>
            <padding>
                <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="5.0" left="680.0" />
            </VBox.margin>
        </Button>
    </children>
    <VBox.margin>
        <Insets bottom="10.0" />
    </VBox.margin>
</VBox>